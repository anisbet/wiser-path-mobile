<?xml version="1.0" encoding="utf-8"?>

<TableLayout 
	android:id="@+id/Incident_Layout" 
	android:layout_width="match_parent"  
    android:layout_height="match_parent" 
    android:shrinkColumns="*"  
    android:stretchColumns="*"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TableRow
		android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">
		<TextView
	    	android:text="Title"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="1" />
		<EditText 
		android:text="Title" 
		android:id="@+id/Trace_Title" 
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:layout_span="4"/>
	</TableRow>
	<TableRow
		android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">
			<TextView 
				android:text="Speed" 
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="1"/>
			<TextView 
				android:text="30.3 kmh" 
				android:id="@+id/Speed"
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="2"/>
		</TableRow>
		<TableRow android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">
			<TextView 
				android:text="Distance"
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="1"/>
			<TextView 
				android:text="5 kms" 
				android:id="@+id/Distance"  
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="2"/>
		</TableRow>
		<TableRow android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">
			<TextView 
				android:text="Latitude"
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="1"/>
			<TextView 
				android:text="10001944" 
				android:id="@+id/Latitude"
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="2"/>
		</TableRow>
		<TableRow android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">
			<TextView 
				android:text="Longitude"
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="1"/>
			<TextView 
				android:text="11001921" 
				android:id="@+id/Longitude"
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="2"/>
		</TableRow>
		<TableRow android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">
			<TextView 
				android:text="Time" 
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="1"/>
			<TextView 
				android:text="23:12:45.1" 
				android:id="@+id/Time"
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="2"/>
		</TableRow>
		<TableRow android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">
				<TextView 
				android:text="Direction" 
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="1"/>
				<TextView 
				android:text="210" 
				android:id="@+id/Direction"
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="2"/>
			</TableRow>
			<TableRow android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">
				<TextView 
				android:text="Pace" 
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="1"/>
				<TextView 
				android:text="2.3 kph" 
				android:id="@+id/Pace"
				android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="2"/>
			</TableRow>
	<TableRow
		android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">
		<TextView
	    	android:text="Content"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="1" />
		<EditText 
			android:text="Describe your trace" 
			android:id="@+id/Trace_Blog"  
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:layout_span="4"/>
	</TableRow>
	<TableRow
		android:layout_height="wrap_content"  
       android:layout_width="match_parent"  
       android:gravity="center_horizontal">
       <TextView
	    	android:text="Tags"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_span="1" />
        <EditText 
			android:text="tags" 
			android:id="@+id/Trace_Tag" 
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:layout_span="4"/>
	</TableRow>
	<TableRow
		android:layout_height="wrap_content"  
       android:layout_width="match_parent"  
       android:gravity="center_horizontal">
		<ToggleButton 
			android:id="@+id/Trace_StartStop" 
			android:textOff="Start" 
			android:textOn="Stop" 
			android:layout_height="90px"
			android:layout_span="2"/>
	</TableRow>
