<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="Wiser Path Login">
		<PreferenceScreen
            android:title="Wiser Path Login"
            android:summary="Login or change users"
            android:key="login">
            <!--  These values are also mentioned in Credential.java if you change them here login will not work -->
			<EditTextPreference
	            android:name="UserName"
	            android:summary="Enter your Wiser Path user name"
	            android:defaultValue=""
	            android:title="User Name"
	            android:key="USER_NAME" />
	        <EditTextPreference
	            android:name="Password"
	            android:summary="Enter your Wiser Path password"
	            android:defaultValue=""
	            android:title="Password"
	            android:key="PASSWORD" />
		</PreferenceScreen>
	</PreferenceCategory>
	<!-- registration or add user -->
	<PreferenceCategory android:title="Register">
		<PreferenceScreen
            android:title="Join Wiser Path!"
            android:summary="Register (always free)"
            android:key="register">
            <!--  These values are also mentioned in Credential.java if you change them here login will not work -->
			<EditTextPreference
	            android:name="UserName"
	            android:summary="Enter your Wiser Path user name"
	            android:defaultValue=""
	            android:title="User Name"
	            android:key="REGISTER_USER_NAME" />
	        <EditTextPreference
	            android:name="Email"
	            android:summary="Enter your email address (we don't permit spamming!)"
	            android:defaultValue=""
	            android:title="Email Address"
	            android:key="EMAIL" />
		</PreferenceScreen>
	</PreferenceCategory>
	<PreferenceCategory android:title="Settings">
