<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="Wiser Path Login">
		<PreferenceScreen
            android:title="Create / Manage Account"
            android:summary="Use this to create an account or change users"
            android:key="login">
			<EditTextPreference
	            android:name="User Name"
	            android:summary="Enter your Wiser Path user name"
	            android:defaultValue=""
	            android:title="User Name"
	            android:key="userName" />
	        <EditTextPreference
	            android:name="Password"
	            android:summary="Enter your Wiser Path password"
	            android:defaultValue=""
	            android:title="Password"
	            android:key="userPassword" />
			<EditTextPreference
				android:name="Reenter Password"
	            android:summary="Confirm your Wiser Path password"
	            android:defaultValue=""
	            android:enabled="false"
	            android:title="Re-enter Password"
	            android:key="userPasswordReenter" />
		</PreferenceScreen>
	</PreferenceCategory>
	<PreferenceCategory android:title="Settings">
        <CheckBoxPreference
			android:title="Work online"
			android:defaultValue="true"
			android:summary="Connect with Wiser Path on line when possible?"
			android:key="online"/>
		<CheckBoxPreference
		   android:title="Use Location"
		   android:defaultValue="true"
		   android:summary="Use your GPS to record information"
		   android:key="useLocation" />
